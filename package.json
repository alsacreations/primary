{
  "name": "primary-css-generator",
  "version": "1.0.0",
  "description": "Configurateur CSS pour projets Alsacréations - Générateur de tokens et thèmes personnalisés",
  "main": "index.html",
  "scripts": {
    "test": "node scripts/test-generate.js",
    "lint": "stylelint assets/css/**/*.css --fix",
    "format:generated": "npx stylelint \"tmp/*.css\" --fix",
    "generate:tokens": "node scripts/figma-import.js && npm run format:generated",
    "import:step1": "node scripts/import-step1.js --source=project",
    "serve": "npx http-server . -p 8080",
    "build": "echo 'No build step required - static files only'"
  },
  "devDependencies": {
    "@axe-core/cli": "^4.11.0",
    "http-server": "^14.1.1",
    "stylelint": "^16.0.0",
    "stylelint-config-html": "^1.1.0",
    "stylelint-config-property-sort-order-smacss": "^10.0.0",
    "stylelint-config-standard": "^36.0.0"
  },
  "author": "Alsacréations",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/alsacreations/primary"
  },
  "keywords": [
    "css",
    "generator",
    "tokens",
    "alsacreations",
    "design-system"
  ],
  "type": "module"
}

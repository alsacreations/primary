{
  "editor.defaultFormatter": "prettier.prettier-vscode",
  "editor.formatOnSave": true,
  "editor.formatOnPaste": false,
  "editor.codeActionsOnSave": {
    "source.fixAll.eslint": "explicit",
    "source.fixAll.stylelint": "explicit",
    "source.fixAll.markdownlint": "explicit"
  },
  "[vue]": {
    "editor.defaultFormatter": "prettier.prettier-vscode"
  },
  "[json]": {
    "editor.defaultFormatter": "prettier.prettier-vscode"
  },
  "[javascript]": {
    "editor.defaultFormatter": "prettier.prettier-vscode"
  },
  "[typescript]": {
    "editor.defaultFormatter": "prettier.prettier-vscode"
  },
  "[markdown]": {
    "editor.defaultFormatter": "prettier.prettier-vscode"
  },
  "[css]": {
    "editor.defaultFormatter": "prettier.prettier-vscode"
  },
  "[scss]": {
    "editor.defaultFormatter": "prettier.prettier-vscode"
  },
  "prettier.enable": true,
  "stylelint.enable": true,
  // ↓ Seulement si stylelint utilisé sur le projet,
  "css.validate": false,
  "scss.validate": false,
  "less.validate": false,
  // ↑ sans stylelint on perdrait toute validation native
  "stylelint.validate": [
    "css",
    "less",
    "postcss",
    "scss",
    "sass",
    "html",
    "vue"
  ],
  "css.lint.unknownAtRules": "ignore",
  "scss.lint.unknownAtRules": "ignore",
  "github.copilot.chat.locale": "fr",
  "github.copilot.chat.commitMessageGeneration.instructions": [
    "Generate the commit message in French language ONLY.",
    "Do NOT use English.",
    "Use Conventional Commits format.",
    "Provide a descriptive summary of the changes (not just 'Remove')."
  ]
}
